@model ASP_NET_2.Models.Country

@{
    ViewData["Title"] = "Create";
}

<h1>Create Country<</h1>



<h4>импортировать из файла для пакетного создания</h4>

<div class="row mb-4">
    <div class="col-md-6">
        <form asp-action="ImportExcel" method="post" enctype="multipart/form-data">
            <label for="excelFile">Excel файл (.xlsx):</label>
            <input type="file" id="excelFile" name="uploadedFile" accept=".xlsx" class="form-control-file" required />
            <button type="submit" class="btn btn-sm btn-outline-success mt-2">
                <i class="fas fa-file-excel"></i> Загрузить Excel
            </button>
        </form>
    </div>

    <div class="col-md-6">
        <form asp-action="ImportCSV" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <label for="csvFile">CSV файл (.csv):</label>
            <input type="file" id="csvFile" name="uploadedFile" accept=".csv" class="form-control-file" required />
            <button type="submit" class="btn btn-sm btn-outline-success mt-2">
                <i class="fas fa-file-csv"></i> Загрузить CSV
            </button>
        </form>
    </div>
    <h5>пример</h5>
    <h6>id;name;capital</h6>
    <h6>3;Китай;Пекин</h6>
    <h6>2;Россия;Москва</h6>
    <h6>6;Япония;Токио</h6>
</div>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="capital" class="control-label"></label>
                <input asp-for="capital" class="form-control" />
                <span asp-validation-for="capital" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}